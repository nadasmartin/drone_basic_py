<?xml version='1.0'?>

<robot name="drone_custom" xmlns:xacro="http://www.ros.org/wiki/xacro">

  
  <link name="base_footprint"></link>

    <!-- STEP 2 - Drone Body = base_link -->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name='base_link'>
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.0120193" ixy="0" ixz="0"
          iyy="0.023615" iyz="0"
          izz="0.0120193"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".4 .4 .1"/>
      </geometry>
    </collision>

    <visual name='base_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename = "package://drone_basic_py/meshes/drone_model_basic.dae"/>
        <!-- <box size=".4 .2 .1"/> -->
      </geometry>
      <!-- <material name="orange"/> -->
    </visual>

    </link>

<link name="rotor_1">
  <visual>
    <geometry>
      <cylinder length="0.02" radius="0.01"/>
    </geometry>
  </visual>
  <inertial>
    <mass value="0.0001"/>
    <inertia ixx="0.0000001" iyy="0.0000001" izz="0.0000001" ixy="0.0" ixz="0.0" iyz="0.0"/>
  </inertial>
</link>

<joint name="rotor_1_joint" type="fixed">
  <parent link="base_link"/>
  <child link="rotor_1"/>
  <origin xyz="0.1 0.1 0.0" rpy="0 0 0"/> <!-- adjust to your rotor position -->
  <transmission name="rotor_1_trans">
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="rotor_1_joint">
    <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
  </joint>
  <actuator name="rotor_1_motor">
    <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
</transmission>
</joint>

<link name="rotor_2">
  <visual>
    <geometry>
      <cylinder length="0.02" radius="0.01"/>
    </geometry>
  </visual>
  <inertial>
    <mass value="0.0001"/>
    <inertia ixx="0.0000001" iyy="0.0000001" izz="0.0000001" ixy="0.0" ixz="0.0" iyz="0.0"/>
  </inertial>
</link>

<joint name="rotor_2_joint" type="fixed">
  <parent link="base_link"/>
  <child link="rotor_2"/>
  <origin xyz="-0.1 0.1 0.0" rpy="0 0 0"/> <!-- adjust to your rotor position -->
    <transmission name="rotor_2_trans">
